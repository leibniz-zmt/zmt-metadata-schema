{
  "title": "Dataset",
  "description": "",
  "type": "object",

  "properties": {
    "title": { "type": "string", "description": "full dataset title" },

    "authors": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "full_name": {
            "type": "string",
            "description": "Full name (latin transcription, all UFT-8 characters allowed)"
          },
          "full_name_nonlatin": {
            "type": "string",
            "description": "Full name (non-latin alphabet)"
          },
          "family_name": {
            "type": "string",
            "description": "Family name (latin transcription)"
          },
          "given_name": {
            "type": "string",
            "description": "Given/other names (latin transcription)"
          },
          "affiliation": { "type": "string" },
          "ORCID": {
            "type": "string",
            "description": "ORCID identifier as 16-digit number, e.g. 0000-0001-6233-1866",
            "pattern": "^\\d{4}-\\d{4}-\\d{4}-\\d{4}$"
          },
          "email": { "type": "string", "format": "email" }
        },
        "required": ["full_name", "email"]
      },
      "minItems": 1,
      "uniqueItems": true
    },

    "abstract": {
      "type": "string",
      "minLength": 80,
      "maxLength": 1000,
      "description": "Abstract with at least 80 characters"
    },

    "comment": { "type": "string" },

    "license": {
      "type": "string",
      "enum": ["CC-BY", "CC-BY-SA", "CC0", "restricted access"]
    },

    "dataset_doi": {
      "type": "string",
      "pattern": "(10[.][0-9]{4,}(?:[.][0-9]+)*/(?:(?![%\"#? ])\\S)+)",
      "title": "Dataset DOI, e.g. 10.1594/PANGAEA.938740"
    },

    "related_to": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "(10[.][0-9]{4,}(?:[.][0-9]+)*/(?:(?![%\"#? ])\\S)+)"
      },
      "title": "Related DOIs, e.g. 10.1000/182",
      "description": "Related publications and/or datasets"
    },

    "keywords": {
      "type": "array",
      "items": { "type": "string" }
    },

    "events": {
      "type": "array",
      "description": "https://wiki.pangaea.de/wiki/Event",
      "items": {
        "type": "object",
        "properties": {
          "event_datetime": {
            "type": "string",
            "format": "date-time"
          },

          "longitude": {
            "type": "number",
            "minimum": -180,
            "maximum": 180,
            "description": "longitude (W/E) in decimal degree"
          },
          "latitude": {
            "type": "number",
            "minimum": -90,
            "maximum": 90,
            "description": "latitude (N/S) in decimal degree"
          },
          "elevation": {
            "type": "number",
            "minimum": -10000,
            "maximum": 20000,
            "description": "elevation in m"
          },

          "location": {
            "type": "string",
            "description": "geographical location (e.g., North Sea; Espoo, Finland)"
          }
        },
        "minItems": 1,
        "required": ["longitude", "latitude"]
      }
    },

    "events_in_data": {
      "type": "boolean",
      "title": "Additional timepoints and locations in data",
      "description": "Does the data contain additional information about timepoints and locations?"
    },

    "events_geojson": {
      "type": "string",
      "title": "GeoJSON",
      "pattern": "",
      "description": "GeoJSON for complex geographic structures"
    },

    "project": {
      "title": "Project",
      "description": "https://wiki.pangaea.de/wiki/Project",
      "type": "object",
      "properties": {
        "project_name": {
          "type": "string",
          "description": "full project title"
        },
        "project_acronym": { "type": "string" },
        "project_id": { "type": "string", "description": "ZMT Project ID" },
        "project_type": {
          "type": "string",
          "enum": ["DFG", "EU", "BMBF", "national", "international", "ZMT"]
        },

        "institute": {
          "type": "string",
          "description": "place of coordination or project office",
          "default": "Leibniz Centre for Tropical Marine Research (ZMT)"
        },
        "start_date": { "type": "string", "format": "date" },
        "end_date": { "type": "string", "format": "date" },
        "url": { "type": "string", "format": "uri" },
        "coordinator": {
          "type": "object",
          "properties": {
            "full_name": {
              "type": "string",
              "description": "Full name (latin transcription, all UFT-8 characters allowed)"
            },
            "full_name_nonlatin": {
              "type": "string",
              "description": "Full name (non-latin alphabet)"
            },
            "family_name": {
              "type": "string",
              "description": "Family name (latin transcription)"
            },
            "given_name": {
              "type": "string",
              "description": "Given/other names (latin transcription)"
            },
            "affiliation": { "type": "string" },
            "ORCID": {
              "type": "string",
              "description": "ORCID identifier as 16-digit number, e.g. 0000-0001-6233-1866",
              "pattern": "^\\d{4}-\\d{4}-\\d{4}-\\d{4}$"
            },
            "email": { "type": "string", "format": "email" }
          },
          "required": ["full_name", "email"]
        }
      },
      "required": ["acronym", "project_name", "url", "start_date", "end_date"]
    },
    "campaign": {
      "title": "Campaign",
      "description": "https://wiki.pangaea.de/wiki/Campaign, synonyms: cruise, expedition, leg, ",
      "type": "object",
      "properties": {
        "label": {
          "type": "string",
          "description": "is unique and does not contain blanks; uses abbreviations instead of full names"
        },
        "optional_label": { "type": "string" },
        "begin": { "type": "string", "format": "date" },
        "end": { "type": "string", "format": "date" },
        "responsible_scientists": {
          "type": "array",
          "items": {
            "type": "object",
            "type": "object",
            "properties": {
              "full_name": {
                "type": "string",
                "description": "Full name (latin transcription, all UFT-8 characters allowed)"
              },
              "full_name_nonlatin": {
                "type": "string",
                "description": "Full name (non-latin alphabet)"
              },
              "family_name": {
                "type": "string",
                "description": "Family name (latin transcription)"
              },
              "given_name": {
                "type": "string",
                "description": "Given/other names (latin transcription)"
              },
              "affiliation": { "type": "string" },
              "ORCID": {
                "type": "string",
                "description": "ORCID identifier as 16-digit number, e.g. 0000-0001-6233-1866",
                "pattern": "^\\d{4}-\\d{4}-\\d{4}-\\d{4}$"
              },
              "email": { "type": "string", "format": "email" }
            },
            "required": ["full_name", "email"]
          },
          "minItems": 1,
          "uniqueItems": true
        }
      }
    },

    "method": {
      "title": "Method",
      "description": "https://wiki.pangaea.de/wiki/Method",
      "type": "object",
      "properties": {
        "method_name": {
          "type": "string",
          "description": "full official name of tool/instrument/device/gear"
        },
        "abbreviation": {
          "type": "string",
          "description": "may be used for import in an event list to avoid misspellings"
        },
        "url": {
          "type": "string",
          "description": "should contain a web address, where an official description of the device can be found"
        }
      }
    },
    "max_files": {
      "type": "integer",
      "description": "Maximum number of files to included by the CaosDB crawler",
      "default": 100
    }
  },

  "required": ["title", "authors", "abstract"]
}
